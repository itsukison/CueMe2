{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": false,
    "noEmit": true
  },
  "include": [
    "electron/**/*.ts",
    "scripts/**/*.js",
    "scripts/**/*.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "src"
  ]
}
